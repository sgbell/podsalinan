<?xml version="1.0"?>
<menubar>
	<menu>
		<title>File</title>
		<menuitem>
			<name>Add Url</name>
			<keycode>u</keycode>
			<quickkeycode>control U</quickkeycode>
			<action>addURL</action>
			<tooltip>Download a file</tooltip>
		</menuitem>
		<menuitem>
			<name>Add Rss Feed</name>
			<keycode>r</keycode>
			<quickkeycode>control R</quickkeycode>
			<action>addRSS</action>
			<tooltip>Add a Podcast/RSS Feed</tooltip>
		</menuitem>
		<menuitem>
			<name>Quit</name>
			<keycode>q</keycode>
			<quickkeycode>control Q</quickkeycode>
			<action>quit</action>		
		</menuitem>
	</menu>
	<menu>
		<title>Feeds</title>
		<menuitem>
			<name>Set Download Folder</name>
			<keycode>d</keycode>
			<action>setDownloadFolder</action>
		</menuitem>
		<menuitem>
			<name>Remove Feed</name>
			<keycode>r</keycode>
			<quickkeycode>control D</quickkeycode>
			<action>removeFeed</action>
		</menuitem>
	</menu>
	<menu>
		<title>Downloads</title>
		<menuitem>
			<name>Change Download Folder</name>
			<keycode>f</keycode>
			<action>setURLFolder</action>
		</menuitem>
		<menuitem>
			<name>Delete Download</name>
			<keycode>d</keycode>
			<action>deleteURL</action>
		</menuitem>
	</menu>
	<menu>
		<title>Settings</title>
		<menuitem>
			<name>Number of Podcast Downloaders</name>
			<keycode>p</keycode>
			<action>numPodcasts</action>
		</menuitem>
		<menuitem>
			<name>Number of URL Downloaders</name>
			<keycode>u</keycode>
			<action>numDownloads</action>
		</menuitem>
		<menuitem>
			<name>Set update interval</name>
			<keycode>u</keycode>
			<action>updateInterval</action>
		</menuitem>
	</menu>
</menubar>